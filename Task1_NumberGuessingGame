import java.util.Random;
import java.util.Scanner;

public class NumberGame {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Random rand = new Random();

        int totalRoundsPlayed = 0;
        int totalScore = 0;

        System.out.println("Welcome to the Number Guessing Game!");

        boolean playAgain = true;

        while (playAgain) {
            int numberToGuess = rand.nextInt(100) + 1; 
            int attemptsLeft = 7;
            boolean guessedCorrectly = false;

            System.out.println("New Round Started! Guess the number between 1 and 100.");
            System.out.println("You have " + attemptsLeft + " attempts.");

            while (attemptsLeft > 0) {
                System.out.print("Enter your guess: ");
                int userGuess;
                try {
                    userGuess = Integer.parseInt(sc.nextLine());
                } catch (NumberFormatException e) {
                    System.out.println("Invalid input! Please enter a number.");
                    continue;
                }
                   if (userGuess < 1 || userGuess > 100) {
                    System.out.println("Please guess a number between 1 and 100.");
                    continue;
                }

                attemptsLeft--;

                if (userGuess == numberToGuess) {
                    System.out.println("Congratulations! You guessed the number.");
                    guessedCorrectly = true;
                    totalScore += (10 - (7 - attemptsLeft)); // Higher score for fewer attempts
                    break;
                } else if (userGuess < numberToGuess) {
                    System.out.println("Too low! Attempts left: " + attemptsLeft);
                } else {
                    System.out.println("Too high! Attempts left: " + attemptsLeft);
                }
            }

            if (!guessedCorrectly) {
                System.out.println("You've used all attempts. The correct number was: " + numberToGuess);
            }

            totalRoundsPlayed++;

            // Ask for another round
            System.out.print("\nDo you want to play another round? (yes/no): ");
            String response = sc.nextLine().toLowerCase();
            playAgain = response.equals("yes") || response.equals("y");
        }

        // Final score summary
        System.out.println("Game Over");
        System.out.println("Rounds played: " + totalRounds);
        System.out.println("Your total score: " + totalScore);

        sc.close();
    }
}
